          %a{href: "https://twitter.com/{{ social.twitter | cgi_escape | escape }}", rel: "me", target: :_blank, title: "{{ social.twitter | escape }}"} Twitter
        %li
          %a{href: "https://www.facebook.com/{{ social.facebook | cgi_escape | escape }}", rel: "me", target: :_blank, title: "{{ social.facebook | escape }}"} Facebook
        %li
          %a{href: "https://www.instagram.com/{{ social.instagram | cgi_escape | escape }}", rel: "me", target: :_blank, title: "{{ social.instagram | escape }}"} Instagram
        %li
          %a{href: "https://github.com/{{ social.github | cgi_escape | escape }}", rel: "me", target: :_blank, title: "{{ social.github | escape }}"} GitHub
        %li
          %a{href: "https://www.linkedin.com/in/{{ social.linkedin | cgi_escape | escape }}", rel: "me", target: :_blank, title: "{{ social.linkedin | escape }}"} LinkedIn
        %li
          %a{href: "https://stackoverflow.com/users/{{ social.stackoverflow | escape }}", rel: "me", target: :_blank, title: "{{ social.stackoverflow | escape }}"} Stack Overflow
